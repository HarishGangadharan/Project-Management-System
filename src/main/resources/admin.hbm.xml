<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
   <class name = "com.ideas2it.employeemanagementsystem.model.Admin"
       table = "admin">
       <meta attribute = "class-description">
             Describes about the Admin information.
       </meta>

<id name = "id"  column = "id">
           <generator class ="increment"/>
       </id>

       <property name = "name" column = "name" type = "string"/>
      <property name = "password" column = "password" type = "string"/>
       <property name = "mail" column = "mail" type = "string"/>
       <property name = "pin" column = "pin" type = "string"/>
       <property name = "mobileNumber" column = "mobilenumber" type = "long"/>

    </class>
</hibernate-mapping>
