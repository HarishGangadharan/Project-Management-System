<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.ideas2it.employeemanagementsystem.model.Address"
        table = "address">
        <meta attribute = "class-description">
             Describes the address detail for both client and employee.
        </meta>

        <id name = "id" type = "int" column = "addressid">
            <generator class="increment"/>
        </id>

        <property name = "firstAddressline" column = "firstAddressline"
         type = "string"/>
        
        <property name = "pincode" column = "pincode" type = "int"/>
        <property name = "city" column = "city" type = "string"/>
        <property name = "state" column = "state" type = "string"/>
        <property name = "type" column = "type" type = "string"/>

        </class>
</hibernate-mapping>
